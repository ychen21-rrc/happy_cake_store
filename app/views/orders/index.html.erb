<h3 class="mb-3">Your Orders</h3>

<% if @orders.any? %>
  <div class="list-group shadow-sm">
    <% @orders.each do |o| %>
      <%= link_to order_path(o), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
        <div>
          <div class="fw-semibold">Order #<%= o.id %></div>
          <div class="small text-muted">
            <%= o.created_at.strftime("%Y-%m-%d %H:%M") %> â€¢ <%= o.status %>
          </div>
        </div>
        <div class="fw-bold">$<%= sprintf("%.2f", o.total_price) %></div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">No orders yet.</div>
<% end %>
