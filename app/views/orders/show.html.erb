<h3 class="mb-3">Order #<%= @order.id %></h3>

<div class="row g-4">
  <div class="col-lg-7">
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Items</h5>

        <table class="table">
          <thead>
            <tr>
              <th>Product</th>
              <th>Qty</th>
              <th>Price at Purchase</th>
              <th>Line Total</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_items.each do |item| %>
              <tr>
                <td><%= item.product.name %></td>
                <td><%= item.quantity %></td>
                <td>$<%= sprintf("%.2f", item.price_at_purchase) %></td>
                <td>$<%= sprintf("%.2f", item.price_at_purchase * item.quantity) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-lg-5">
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <h5 class="card-title">Summary</h5>

        <div class="d-flex justify-content-between">
          <span>Subtotal</span>
          <span>$<%= sprintf("%.2f", @order.subtotal) %></span>
        </div>
        <div class="d-flex justify-content-between small">
          <span>GST</span>
          <span>$<%= sprintf("%.2f", @order.gst_amount) %></span>
        </div>
        <div class="d-flex justify-content-between small">
          <span>PST</span>
          <span>$<%= sprintf("%.2f", @order.pst_amount) %></span>
        </div>
        <div class="d-flex justify-content-between small">
          <span>HST</span>
          <span>$<%= sprintf("%.2f", @order.hst_amount) %></span>
        </div>

        <hr>
        <div class="d-flex justify-content-between fs-5">
          <strong>Total</strong>
          <strong>$<%= sprintf("%.2f", @order.total_price) %></strong>
        </div>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Address</h5>
        <div><%= @order.address.street %></div>
        <div><%= @order.address.city %>, <%= @order.address.province.name %></div>
        <div><%= @order.address.postal_code %></div>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Back to Orders", orders_path, class: "btn btn-outline-secondary" %>
</div>
